<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    tool:openDrawer="start"
    tool:context=".MenuActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolBar"
            app1:title="COVID19-VIRUS"
            app1:titleTextColor="@color/white"
            android:background="#000000"/>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_above="@id/bottomNav"
            android:layout_below="@id/toolBar"
            android:layout_marginTop="0dp"


            android:layout_marginBottom="0dp"
            android:background="@drawable/coronanewfinal"
            android:orientation="horizontal">


            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_above="@id/scroll"
                android:layout_marginLeft="7dp"
                android:padding="5dp"
                android:text="SYMPTOMS"
                android:textColor="#040303"
                android:textSize="28dp"
                android:textStyle="bold"

                />

            <HorizontalScrollView
                android:id="@+id/scroll"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="70dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"

                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:elevation="5dp"
                        app1:cardCornerRadius="5dp"

                        >

                        <ImageView
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:background="#EDE8E8"
                            android:src="@drawable/coronavirus6" />


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:elevation="5dp"
                        app1:cardCornerRadius="5dp"

                        >

                        <ImageView
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:background="#EDE8E8"
                            android:src="@drawable/coronavirus8" />


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:elevation="5dp"
                        app1:cardCornerRadius="5dp"

                        >

                        <ImageView
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:background="#EDE8E8"
                            android:src="@drawable/coronavirus9" />


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:elevation="5dp"
                        app1:cardCornerRadius="5dp"

                        >

                        <ImageView
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:background="#EDE8E8"
                            android:src="@drawable/coronavirus2" />


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:elevation="5dp"
                        app1:cardCornerRadius="5dp"

                        >

                        <ImageView
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:background="#EDE8E8"
                            android:src="@drawable/coronavirus41" />


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:elevation="5dp"
                        app1:cardCornerRadius="5dp"

                        >

                        <ImageView
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:background="#EDE8E8"
                            android:src="@drawable/coronavirus10" />


                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </HorizontalScrollView>


        </RelativeLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottomNav"
            app1:menu="@menu/bottomicon"
            app1:labelVisibilityMode="labeled"
            android:layout_alignParentBottom="true"
            android:background="@color/white"/>


    </RelativeLayout>



    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navMenu"
        app1:menu="@menu/iconmenu"
        app1:headerLayout="@layout/navheader"
        android:layout_gravity = "start"/>


</androidx.drawerlayout.widget.DrawerLayout>
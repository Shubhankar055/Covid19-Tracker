<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#DACDCD"
    tools:context=".HomeActivity">


    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="SYMPTOMS"
        android:textColor="#040303"
        android:textSize="28dp"
        android:textStyle="bold"
        android:layout_marginLeft="7dp"
        android:padding="5dp"
        android:layout_above="@id/scroll"

        />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="180dp"
        android:layout_height="120dp"
        android:id="@+id/scroll"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"

            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:elevation="5dp"
                app:cardCornerRadius="5dp"

                >

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="#EDE8E8"
                    android:src="@drawable/coronavirus6" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:elevation="5dp"
                app:cardCornerRadius="5dp"

                >

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="#EDE8E8"
                    android:src="@drawable/coronavirus8" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:elevation="5dp"
                app:cardCornerRadius="5dp"

                >

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="#EDE8E8"
                    android:src="@drawable/coronavirus9" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:elevation="5dp"
                app:cardCornerRadius="5dp"

                >

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="#EDE8E8"
                    android:src="@drawable/coronavirus2" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:elevation="5dp"
                app:cardCornerRadius="5dp"

                >

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="#EDE8E8"
                    android:src="@drawable/coronavirus41" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:elevation="5dp"
                app:cardCornerRadius="5dp"

                >

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="#EDE8E8"
                    android:src="@drawable/coronavirus10" />


            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </HorizontalScrollView>


</RelativeLayout>